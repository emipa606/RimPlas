<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>[1.0] Defenses Expanded</li>
      <li>[1.1] Defenses Expanded</li>
    </mods>
    <match Class="PatchOperationAdd">
      <xpath>/Defs</xpath>
      <value>
        <RecipeDef>
          <defName>MakeRimPlasHShell</defName>
          <label>make H-barrier from RimPlas</label>
          <description>Produce an empty H-barrier shell.</description>
          <jobString>Making H-barrier.</jobString>
          <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
          <workSkillLearnFactor>0.1</workSkillLearnFactor>
          <effectWorking>CutStone</effectWorking>
          <soundWorking>Recipe_Machining</soundWorking>
          <workAmount>850</workAmount>
          <ingredients>
            <li>
              <filter>
                <thingDefs>
                  <li>Steel</li>
                </thingDefs>
              </filter>
              <count>2</count>
            </li>
            <li>
              <filter>
                <thingDefs>
                  <li>RimPlas</li>
                </thingDefs>
              </filter>
              <count>3</count>
            </li>
          </ingredients>
          <researchPrerequisite>Machining</researchPrerequisite>
          <products>
            <HBarrierShell>1</HBarrierShell>
          </products>
          <fixedIngredientFilter>
            <thingDefs>
              <li>Steel</li>
              <li>RimPlas</li>
            </thingDefs>
          </fixedIngredientFilter>
          <workSkill>Crafting</workSkill>
          <recipeUsers>
            <li>TableMachining</li>
          </recipeUsers>
        </RecipeDef>
      </value>
    </match>
  </Operation>
</Patch>