<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- VFE Prod -->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Vanilla Furniture Expanded - Production</li>
    </mods>
    <match Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="RimPlas_InjMldMachine"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
          <value>
            <li>VFE_MachiningCabinet</li>
            <li>VFE_FabricationCabinet</li>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="RimPlas_AdvInjMld"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
          <value>
            <li>VFE_MachiningCabinet</li>
            <li>VFE_FabricationCabinet</li>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="RimPlas_MechBreaker"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
          <value>
            <li>VFE_MachiningCabinet</li>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>