<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ResearchTabDef>
    <defName>RimPlasSynth</defName>
    <label>RimPlas Synthetics</label>
  </ResearchTabDef>
  <!-- Semi synthetics -->
  <ResearchProjectDef>
    <defName>RimPlas_SemiSynth</defName>
    <label>Semi-synthetics</label>
    <description>Grants the ability to use new materials.</description>
    <baseCost>300</baseCost>
    <techLevel>Industrial</techLevel>
    <prerequisites>
      <li>BiofuelRefining</li>
    </prerequisites>
    <tab>RimPlasSynth</tab>
  </ResearchProjectDef>
  <!--  Synthetics -->
  <ResearchProjectDef>
    <defName>RimPlas_Synth</defName>
    <label>Synthetic Materials</label>
    <description>Grants the ability to make synthetic textiles and leads to further synthetic research.</description>
    <baseCost>500</baseCost>
    <techLevel>Industrial</techLevel>
    <prerequisites>
      <li>RimPlas_InjMld</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <tab>RimPlasSynth</tab>
  </ResearchProjectDef>
  <ResearchProjectDef>
    <defName>RimPlas_Synth_Plasteel</defName>
    <label>Synthesise Plasteel</label>
    <description>Grants the ability to make Plasteel.</description>
    <baseCost>1500</baseCost>
    <techLevel>Spacer</techLevel>
    <prerequisites>
      <li>RimPlas_Synth</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <requiredResearchFacilities>
      <li>MultiAnalyzer</li>
    </requiredResearchFacilities>
    <tab>RimPlasSynth</tab>
  </ResearchProjectDef>
  <ResearchProjectDef>
    <defName>RimThermoPlas</defName>
    <label>RimThermoPlas</label>
    <description>Grants the ability to use new materials.</description>
    <baseCost>500</baseCost>
    <techLevel>Spacer</techLevel>
    <prerequisites>
      <li>RimPlas_Synth</li>
    </prerequisites>
    <tab>RimPlasSynth</tab>
  </ResearchProjectDef>
  <ResearchProjectDef>
    <defName>Rimoprene</defName>
    <label>Rimoprene</label>
    <description>Grants the ability to use a new synthetic leather-like textile.</description>
    <baseCost>500</baseCost>
    <techLevel>Spacer</techLevel>
    <prerequisites>
      <li>RimPlas_Synth</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <tab>RimPlasSynth</tab>
  </ResearchProjectDef>
  <!-- Rimica Research -->
  <ResearchProjectDef>
    <defName>Rimica</defName>
    <label>Rimica Composite</label>
    <description>Grants the ability to make Rimica.</description>
    <baseCost>500</baseCost>
    <techLevel>Spacer</techLevel>
    <prerequisites>
      <li>RimPlas_Synth</li>
      <li>SterileMaterials</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <tab>RimPlasSynth</tab>
  </ResearchProjectDef>
  <ResearchProjectDef>
    <defName>FortRimica</defName>
    <label>Fortrimica Composite</label>
    <description>Grants the ability to make fortified Rimica.</description>
    <baseCost>750</baseCost>
    <techLevel>Spacer</techLevel>
    <prerequisites>
      <li>Rimica</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <requiredResearchFacilities>
      <li>MultiAnalyzer</li>
    </requiredResearchFacilities>
    <tab>RimPlasSynth</tab>
  </ResearchProjectDef>
</Defs>
