<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- ===== Rimica ===== -->
  <ThingDef ParentName="StoneBlocksBase">
    <defName>BlocksRimica</defName>
    <label>Rimica blocks</label>
    <description>Blocks of Rimica composite laminate. A manufactured construction material that is heat resistant and has sterile properties.</description>
    <graphicData>
      <color>(181,243,255)</color>
    </graphicData>
    <statBases>
      <Mass>0.75</Mass>
      <Cleanliness>0.7</Cleanliness>
      <MarketValue>11.7</MarketValue>
    </statBases>
    <stuffProps>
      <color>(181,243,255)</color>
      <soundImpactStuff>BulletImpact_Ground</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Stone</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Stone</soundMeleeHitBlunt>
      <stuffAdjective>rimica</stuffAdjective>
      <statFactors>
        <Beauty>1.20</Beauty>
        <MaxHitPoints>1.5</MaxHitPoints>
        <WorkToBuild>5.0</WorkToBuild>
        <Flammability>0</Flammability>
        <DoorOpenSpeed>1.2</DoorOpenSpeed>
        <BedRestEffectiveness>0.95</BedRestEffectiveness>
        <MeleeWeapon_CooldownMultiplier>1.10</MeleeWeapon_CooldownMultiplier>
      </statFactors>
      <statOffsets>
        <Beauty>1.2</Beauty>
      </statOffsets>
      <commonality>0</commonality>
    </stuffProps>
    <techLevel>Spacer</techLevel>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
  </ThingDef>
  <TerrainDef ParentName="FloorBase">
    <defName>RimicaTile</defName>
    <label>Rimica tile</label>
    <renderPrecedence>241</renderPrecedence>
    <description>Composite laminate flooring tiles made from Rimica. They get a bonus to cleanliness.</description>
    <texturePath>Terrain/Surfaces/RimicaFloorTile</texturePath>
    <color>(0.71, 0.95, 1.00)</color>
    <statBases>
      <Beauty>3</Beauty>
      <WorkToBuild>500</WorkToBuild>
      <Cleanliness>0.7</Cleanliness>
    </statBases>
    <costList>
      <BlocksRimica>5</BlocksRimica>
    </costList>
    <constructEffect>ConstructMetal</constructEffect>
    <researchPrerequisites>
      <li>Rimica</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>7</constructionSkillPrerequisite>
  </TerrainDef>
  <RecipeDef>
    <defName>MakeRimicaBlocks</defName>
    <label>Make Rimica Blocks</label>
    <description>Make 25 Rimica blocks.</description>
    <jobString>Making Rimica blocks.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <allowMixingIngredients>false</allowMixingIngredients>
    <workAmount>3500</workAmount>
    <targetCountAdjustment>25</targetCountAdjustment>
    <workSkill>Intellectual</workSkill>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Neutroamine</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Chemfuel</li>
          </thingDefs>
        </filter>
        <count>50</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Synthread</li>
          </thingDefs>
        </filter>
        <count>25</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>25</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Neutroamine</li>
        <li>Chemfuel</li>
        <li>Synthread</li>
        <li>Steel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <BlocksRimica>25</BlocksRimica>
    </products>
    <recipeUsers>
      <li>BiofuelRefinery</li>
    </recipeUsers>
    <skillRequirements>
      <Intellectual>8</Intellectual>
    </skillRequirements>
    <researchPrerequisite>Rimica</researchPrerequisite>
  </RecipeDef>
  <!-- ======= Fortified Rimica ====== -->
