<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Bases -->
  <ThingDef Name="RimPlas_ResourceBase" Abstract="True">
    <thingClass>ThingWithComps</thingClass>
    <category>Item</category>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <useHitPoints>true</useHitPoints>
    <selectable>true</selectable>
    <altitudeLayer>Item</altitudeLayer>
    <stackLimit>75</stackLimit>
    <statBases>
      <Beauty>-7</Beauty>
    </statBases>
    <comps>
      <li Class="CompProperties_Forbiddable" />
    </comps>
    <alwaysHaulable>true</alwaysHaulable>
    <drawGUIOverlay>true</drawGUIOverlay>
    <rotatable>false</rotatable>
    <pathCost>15</pathCost>
  </ThingDef>
  <ThingDef ParentName="RimPlas_ResourceBase" Name="RimPlas_StoneBlocksBase" Abstract="True">
    <description>Blocks of stone. Mostly useful for building long-lasting, simple structures.</description>
    <graphicData>
      <texPath>Things/Item/Resource/StoneBlocks</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Stone_Drop</soundInteract>
    <soundDrop>Stone_Drop</soundDrop>
    <useHitPoints>false</useHitPoints>
    <statBases>
      <MarketValue>1.9</MarketValue>
      <SharpDamageMultiplier>0.6</SharpDamageMultiplier>
      <BluntDamageMultiplier>1.0</BluntDamageMultiplier>
      <Beauty>-12</Beauty>
    </statBases>
    <thingCategories>
      <li>StoneBlocks</li>
    </thingCategories>
    <stuffProps>
      <categories>
        <li>Stony</li>
      </categories>
      <commonality>0.20</commonality>
      <!-- because there are so many stone types -->
      <appearance>Bricks</appearance>
      <statOffsets>
        <WorkToBuild>140</WorkToBuild>
        <Beauty>2</Beauty>
      </statOffsets>
      <statFactors>
        <Beauty>1.2</Beauty>
        <MarketValue>0.4</MarketValue>
        <MaxHitPoints>2.4</MaxHitPoints>
        <Flammability>0</Flammability>
        <WorkToBuild>6.0</WorkToBuild>
        <WorkToMake>1.3</WorkToMake>
        <DoorOpenSpeed>0.85</DoorOpenSpeed>
        <BedRestEffectiveness>0.9</BedRestEffectiveness>
      </statFactors>
    </stuffProps>
    <tools>
      <li>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>1</power>
        <cooldownTime>1.35</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <!-- Asphalt -->
  <ThingDef ParentName="RimPlas_StoneBlocksBase">
    <defName>RimPlas_Asphalt</defName>
    <label>Asphalt</label>
    <description>Construction material, normally made from aggregates and pitch, fast to work with.</description>
    <graphicData>
      <texPath>Things/Stuff/RimPlas_Asphalt</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Stone_Drop</soundInteract>
    <soundDrop>Stone_Drop</soundDrop>
    <statBases>
      <MaxHitPoints>250</MaxHitPoints>
      <MarketValue>5.54</MarketValue>
      <Mass>1</Mass>
      <StuffPower_Armor_Sharp>0.07</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.25</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>0.15</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>2</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>2</StuffPower_Insulation_Heat>
      <SharpDamageMultiplier>0.2</SharpDamageMultiplier>
      <BluntDamageMultiplier>1.1</BluntDamageMultiplier>
    </statBases>
    <useHitPoints>false</useHitPoints>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <deepCommonality>1</deepCommonality>
    <deepCountPerPortion>1</deepCountPerPortion>
    <deepLumpSizeRange>
      <min>0</min>
      <max>1</max>
    </deepLumpSizeRange>
    <stuffProps>
      <constructEffect>ConstructDirt</constructEffect>
      <color>(33,33,33)</color>
      <soundImpactBullet>BulletImpact_Ground</soundImpactBullet>
      <soundMeleeHitSharp>MeleeHit_Stone</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Stone</soundMeleeHitBlunt>
      <stuffAdjective>asphalt</stuffAdjective>
      <appearance>Planks</appearance>
      <statOffsets>
        <WorkToBuild>120</WorkToBuild>
        <Beauty>0</Beauty>
      </statOffsets>
      <statFactors>
        <Beauty>1</Beauty>
        <MarketValue>0.47</MarketValue>
        <MaxHitPoints>1.52</MaxHitPoints>
        <WorkToBuild>1.9</WorkToBuild>
        <DoorOpenSpeed>0.75</DoorOpenSpeed>
        <WorkToMake>1.1</WorkToMake>
      </statFactors>
    </stuffProps>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
  </ThingDef>
  <!-- Recipes -->
  <RecipeDef>
    <defName>MakeAsphalt</defName>
    <jobString>Making Asphalt</jobString>
    <label>Make Asphalt</label>
    <description>Make 50 Asphalt</description>
    <workAmount>500</workAmount>
    <effectWorking>CutStone</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <targetCountAdjustment>50</targetCountAdjustment>
    <workSkill>Crafting</workSkill>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <workSkillLearnFactor>0.25</workSkillLearnFactor>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>50</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>CarboPitch</li>
          </thingDefs>
        </filter>
        <count>25</count>
      </li>
    </ingredients>
    <products>
      <RimPlas_Asphalt>50</RimPlas_Asphalt>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
        <li>CarboPitch</li>
      </thingDefs>
    </fixedIngredientFilter>
    <recipeUsers>
      <li>BiofuelRefinery</li>
    </recipeUsers>
    <researchPrerequisite>RimPlas_CarboSynth</researchPrerequisite>
    <skillRequirements>
      <Crafting>4</Crafting>
      <Intellectual>2</Intellectual>
    </skillRequirements>
  </RecipeDef>
  <!-- Asphalt Floor -->
  <TerrainDef ParentName="FloorBase">
    <defName>RimPlas_AsphaltFloor</defName>
    <label>Asphalt</label>
    <description>Similar to concrete, this is a workhorse of surfaces but not very pretty. Asphalt is also a faster material to use than concrete utilising slightly less material.</description>
    <texturePath>Terrain/Surfaces/RimPlas_AsphaltFloor</texturePath>
    <edgeType>Hard</edgeType>
    <renderPrecedence>71</renderPrecedence>
    <statBases>
      <Beauty>-1</Beauty>
      <WorkToBuild>80</WorkToBuild>
      <Cleanliness>0.05</Cleanliness>
    </statBases>
    <costList>
      <RimPlas_Asphalt>4</RimPlas_Asphalt>
    </costList>
    <designationHotKey>Misc6</designationHotKey>
    <researchPrerequisites>
      <li>Stonecutting</li>
      <li>RimPlas_CarboSynth</li>
    </researchPrerequisites>
  </TerrainDef>
</Defs>