<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ResearchTabDef>
    <defName>RimPlas</defName>
    <label>RimPlas</label>
  </ResearchTabDef>
  <!--   -->
  <ResearchProjectDef>
    <defName>RimPlas</defName>
    <label>RimPlas</label>
    <description>Grants the ability to use new materials.</description>
    <baseCost>500</baseCost>
    <techLevel>Industrial</techLevel>
    <prerequisites>
      <li>ComplexFurniture</li>
      <li>BiofuelRefining</li>
      <li>SterileMaterials</li>
    </prerequisites>
    <tab>RimPlas</tab>
  </ResearchProjectDef>
  <ResearchProjectDef>
    <defName>RimPlas_InjMld</defName>
    <label>Injection Moulding</label>
    <description>Grants the ability to make furniture using injection moulding.</description>
    <baseCost>750</baseCost>
    <techLevel>Industrial</techLevel>
    <prerequisites>
      <li>RimPlas</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <tab>RimPlas</tab>
  </ResearchProjectDef>
  <ResearchProjectDef>
    <defName>RimPlas_AdvInjMld</defName>
    <label>Advanced Injection Moulding</label>
    <description>Grants the ability to make complex materials with injection moulding.</description>
    <baseCost>1000</baseCost>
    <techLevel>Spacer</techLevel>
    <prerequisites>
      <li>RimPlas_InjMld</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <requiredResearchFacilities>
      <li>MultiAnalyzer</li>
    </requiredResearchFacilities>
    <tab>RimPlas</tab>
  </ResearchProjectDef>
  <ResearchProjectDef>
    <defName>RimPlas_Components</defName>
    <label>Construct RimPlas Components</label>
    <description>Grants the ability to make Rimplas versions of components.</description>
    <baseCost>1500</baseCost>
    <techLevel>Spacer</techLevel>
    <prerequisites>
      <li>RimPlas_Synth</li>
      <li>Fabrication</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <requiredResearchFacilities>
      <li>MultiAnalyzer</li>
    </requiredResearchFacilities>
    <tab>RimPlas</tab>
  </ResearchProjectDef>
  <ResearchProjectDef>
    <defName>RimPlas_AdvComponents</defName>
    <label>Construct RimPlas Advanced Components</label>
    <description>Grants the ability to make Rimplas versions of advanced components.</description>
    <baseCost>2000</baseCost>
    <techLevel>Spacer</techLevel>
    <prerequisites>
      <li>RimPlas_Components</li>
      <li>AdvancedFabrication</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <requiredResearchFacilities>
      <li>MultiAnalyzer</li>
    </requiredResearchFacilities>
    <tab>RimPlas</tab>
  </ResearchProjectDef>
  <ResearchProjectDef>
    <defName>RimPlas_MultiAnalyzer</defName>
    <label>Construct RimPlas MultiAnalyzer</label>
    <description>Grants the ability to make a Rimplas version of the multianalyzer.</description>
    <baseCost>1200</baseCost>
    <techLevel>Spacer</techLevel>
    <prerequisites>
      <li>RimPlas_Synth</li>
      <li>MultiAnalyzer</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <tab>RimPlas</tab>
  </ResearchProjectDef>
</Defs>