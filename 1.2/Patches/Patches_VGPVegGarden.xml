<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- ====== Compatability Patch ==================== -->
  <!-- CarboPitch -->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>VGP Vegetable Garden</li>
    </mods>
    <match Class="PatchOperationAdd">
      <xpath>/Defs/RecipeDef[defName="MakeCarboPitch"]/ingredients/li[1]/filter/thingDefs</xpath>
      <value>
        <li>VG_IronWoodLog</li>
        <li>Bamboo</li>
      </value>
    </match>
  </Operation>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>VGP Vegetable Garden</li>
    </mods>
    <match Class="PatchOperationAdd">
      <xpath>/Defs/RecipeDef[defName="MakeCarboPitch"]/fixedIngredientFilter/thingDefs</xpath>
      <value>
        <li>VG_IronWoodLog</li>
        <li>Bamboo</li>
      </value>
    </match>
  </Operation>
</Patch>
